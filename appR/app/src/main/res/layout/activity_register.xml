<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"

    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="120dp"
    android:paddingRight="10dp"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="364dp"
        android:layout_height="370dp"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="17dp"
        android:visibility="visible"
        tools:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="353dp"
            android:layout_gravity="center"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="17dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#F3DEBA"
            app:cardCornerRadius="25dp"
            app:cardElevation="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="357dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="vertical"

                android:background="@drawable/gradient_background">>

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="449dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/playfair"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:shadowColor="#FFA099"
                    android:text="Créer un compte"
                    android:textColor="#d44038"
                    android:textSize="35sp" />

                <LinearLayout
                    android:id="@+id/nomR"
                    android:layout_width="278dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nom1"
                        android:layout_width="212dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/playfair"
                        android:text="Nom"
                        android:textColor="#800080"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/getNomR"
                        android:layout_width="298dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textColor="#A4AB74"
                        android:textColorLink="#D34038" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/email"
                    android:layout_width="277dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/motdepasseR"
                        android:layout_width="302dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/playfair"
                        android:text="Mot de passe"
                        android:textColor="#800080"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/getMotDePasseR"
                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:textColor="#A4AB74" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pw"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/motdepasseconfirmR"
                        android:layout_width="302dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/playfair"
                        android:text="confirmer mp"
                        android:textColor="#800080"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/getMotDePasseconfirmR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPassword" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </FrameLayout>

    <LinearLayout
        android:layout_width="293dp"
        android:layout_height="169dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:clipToPadding="false"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="1dp"
            android:visibility="visible"
            tools:visibility="visible">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#F3DEBA"
                app:cardCornerRadius="25dp"
                app:cardElevation="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:background="@drawable/gradient_background">>

                    <TextView
                        android:id="@+id/bRegister"
                        android:layout_width="291dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/playfair"
                        android:gravity="center"
                        android:text="Valider"
                        android:textColor="#A52A2A"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <FrameLayout
            android:layout_width="293dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:clipToPadding="false"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="1dp"
            android:visibility="visible"
            tools:visibility="visible">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:id="@+id/loginCardView"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#F3DEBA"
                app:cardCornerRadius="25dp"
                app:cardElevation="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/gradient_background">>

                    <TextView
                        android:layout_width="291dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/playfair"
                        android:gravity="center"
                        android:text="Déjà crée ? se connecter"
                        android:textColor="#A52A2A"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

    </LinearLayout>


</LinearLayout>